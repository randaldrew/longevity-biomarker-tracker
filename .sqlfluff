[sqlfluff]
dialect = mysql
templater = jinja
# Set reasonable line length
max_line_length = 120
# We're not ignoring rules globally anymore

[sqlfluff:indentation]
tab_space_size = 4

[sqlfluff:rules]
# Disable rules for specific files
[sqlfluff:rules:references.keywords]
# Disable the keywords rule for our schema
ignore_words = User, Session, Value, Range

[sqlfluff:rules:layout.spacing]
# Skip spacing checks
spacing_before_brackets = False

[sqlfluff:rules:layout.long_lines]
# Skip long lines
ignore = True
